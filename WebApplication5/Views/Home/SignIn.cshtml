@model WebApplication5.Models.Instagram
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>SignIn</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.3/dist/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
    <link href="~/Content/SignIn.css" rel="stylesheet" />
</head>
<body>
    <main>
        <div class="page">
            <div class="header">
                <h1 class="logo">Instagram</h1>
                <p>Sign up to see photos and videos from your friends.</p>
                @*<button><i class="fab fa-facebook-square"></i> Log in with Facebook</button>*@
                <div>
                    <hr>
                    <p>OR</p>
                    <hr>
                </div>
            </div>
            @*Input Fiels........*@
        <div class="container">
            <h5 class="text-danger">@ViewData["SignIn_Err"]</h5>

            @using (Html.BeginForm())
            {
                @Html.HiddenFor(a => a.id)
                @Html.LabelFor(a => a.uname) @Html.EditorFor(a => a.uname) @Html.ValidationMessageFor(a => a.uname, "", new { @class = "text-danger" })<br /><br />
                @Html.LabelFor(a => a.uemail) @Html.EditorFor(a => a.uemail) @Html.ValidationMessageFor(a => a.uemail, "", new { @class = "text-danger" })<br /><br />
                @Html.LabelFor(a => a.udob) @Html.EditorFor(a => a.udob, "{0:MM/dd/yyyy}", new { @type = "date" }) @Html.ValidationMessageFor(a => a.udob, "", new { @class = "text-danger" })<br /><br />
                @Html.LabelFor(a => a.ugender) @Html.DropDownListFor(a => a.ugender, new SelectList(new[] { "Male", "Female" })) @Html.ValidationMessageFor(a => a.ugender, "", new { @class = "text-danger" })<br /><br />
                @Html.LabelFor(a => a.upass) @Html.EditorFor(a => a.upass) @Html.ValidationMessageFor(a => a.upass, "", new { @class = "text-danger" })<br /><br />
                @Html.LabelFor(a => a.ucpass) @Html.EditorFor(a => a.ucpass) @Html.ValidationMessageFor(a => a.ucpass, "", new { @class = "text-danger" })<br /><br />
                <button type="submit" >Sign In</button>
            }
            <ul>
                <li>By signing up, you agree to our</li>
                <li><a href="">Terms</a></li>
                <li><a href="">Data Policy</a></li>
                <li>and</li>
                <li><a href="">Cookies Policy</a> .</li>
            </ul>
        </div>
        </div>
        @*Log in button.......*@
        <div class="option">
            <p>Have an account? @Html.ActionLink("Log in","LogIn")
        </div>
        <div class="otherapps">
            <p>Get the app.</p>
            <button type="button"><i class="fab fa-apple"></i> App Store</button>
            <button type="button"><i class="fab fa-google-play"></i> Google Play</button>
        </div>
        <div class="footer">
            <ul>
                <li><a href="">ABOUT</a></li>
                <li><a href="">HELP</a></li>
                <li><a href="">PRESS</a></li>
                <li><a href="">API</a></li>
                <li><a href="">JOBS</a></li>
                <li><a href="">PRIVACY</a></li>
                <li><a href="">TEMS</a></li>
                <li><a href="">LOCATIONS</a></li>
                <li><a href="">TOP ACCOUNTS</a></li>
                <li><a href="">HASHTAGS</a></li>
                <li><a href="">LANGUAGE</a></li>
            </ul>
            <p>© 2020 PICTUREGRAM</p>
        </div>
    </main>
</body>
</html>